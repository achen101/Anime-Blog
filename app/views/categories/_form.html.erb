<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :name %>
  </div>
  <div class ="col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "Genre Name", autofocus: true %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit genre_submit_text, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>
<div class="return col-xs-4 col-xs-offset-5">
[ <%= link_to "Return to articles listing", articles_path %> ]
</div>
