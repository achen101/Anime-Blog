<h1 class="center capitalize">Welcome to <%= @user.username %>'s Page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <% if @user.avatar != nil %>
      <%= link_to image_tag("#{@user.avatar.image}", class: "avatar"), user_avatar_path %>
    <% else %>
      <%= link_to image_tag("mugi.png", class: "avatar"), user_avatar_path %>
    <% end %>
  </div>
</div>
<h4 align="center" class="capitalize"><%= @user.username %>'s articles</h4>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
